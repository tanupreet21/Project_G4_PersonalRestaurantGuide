<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/toolbar_green"
        app:popupTheme="@style/ToolbarPopupMenu"
        app:titleTextColor="@color/white"
        app:title="@string/app_title" />

    <!-- Map Placeholder Image (Full Screen) -->
    <ImageView
        android:id="@+id/map_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:src="@drawable/map_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="@string/map_placeholder_description"
        />

    <!-- Get Directions Button -->
    <Button
        android:id="@+id/btn_get_directions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@color/toolbar_green"
        android:text="@string/get_directions"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

</RelativeLayout>