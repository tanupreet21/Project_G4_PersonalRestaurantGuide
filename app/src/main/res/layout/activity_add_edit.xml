<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="12dp"
    tools:context=".AddEditRestaurantActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp">

        <!-- Top image -->
        <ImageView
            android:id="@+id/imageRestaurant"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/img"
            android:layout_marginBottom="16dp" />

        <!-- Name -->
        <TextView
            android:text="Name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:hint="Enter restaurant name" />

        <!-- Address -->
        <TextView
            android:text="Address"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:hint="Enter address" />

        <!-- Phone -->
        <TextView
            android:text="Phone"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:textSize="14sp"
            android:inputType="phone"
            android:layout_marginBottom="12dp"
            android:hint="Enter phone number" />

        <!-- Description -->
        <TextView
            android:text="Description"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:hint="Enter a brief description" />

        <!-- Tags -->
        <TextView
            android:text="Tags"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginBottom="12dp"
            android:hint="Example: coffee,lunch,bbq" />

        <!-- Rating -->
        <TextView
            android:text="Rating"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginBottom="16dp"
            android:progressTint="@color/toolbar_green"
            android:secondaryProgressTint="@color/toolbar_green"
            android:indeterminateTint="@color/toolbar_green" />

        <!-- Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="SAVE"
                android:textColor="@android:color/white"
                android:background="@drawable/button_rounded"
                android:textStyle="bold" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="CANCEL"
                android:textColor="@android:color/black"
                android:background="@drawable/button_rounded_gray"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
